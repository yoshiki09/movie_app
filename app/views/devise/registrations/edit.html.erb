<h2>アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
      <% if @user.avatar? %>
          <img src='<%= @user.avatar.url %>', class="edit-icon" alt="ユーザーアイコン">
      <% else %>
          <img src="/assets/default.png", class="edit-icon" alt="ユーザーアイコン" %>
      <% end %>
     <%= f.label :avatar, "プロフィール画像" %><br/>
     <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar" %>
  </div>

  <div class="field">
    <%= f.label :username, "ユーザー名" %><br/>
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :explanations, '経歴' %><br />
    <%= f.text_area :explanations, autofocus: true, autocomplete: "explanations", size: "35x10"  %>
  </div>

  <div class="field">
    <%= f.label :twitter, 'twitterアカウント' %><br />
    <%= f.text_field :twitter, autofocus: true, autocomplete: "twitter" %>
  </div>

  <div class="field">
    <%= f.label :facebook, 'facebookアカウント' %><br />
    <%= f.text_field :facebook, autofocus: true, autocomplete: "facebook" %>
  </div>

  <div class="field">
    <%= f.label :instagram, 'instagramアカウント' %><br />
    <%= f.text_field :instagram, autofocus: true, autocomplete: "instagram" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(変更したくない場合は空白のままにします)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<%= link_to "戻る", :back %>
