<div class="main users-index">
  <div class="container">
      <% @users.each do |user| %>
      <div class="profile border border-gray pt-3">
        <% if user.avatar? %>
          <img src='<%= user.avatar.url %>', class="icon" alt="ユーザーアイコン">
        <% else %>
          <img src="/assets/default.png", class="icon" alt="ユーザーアイコン">
        <% end %>
        <div class="users-index-item">
          <%= link_to user.username, user_path(user.id), class: "link font-weight-bold index-name text-primary" %><br>
          <div class= "index-explanations">
              <%= truncate(user.explanations, length: 80) %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>